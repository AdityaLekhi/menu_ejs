    <h1><%= item.Name%></h1>
    <p><%= item.Description %></p>
    <img src="<%= item.Image %> " alt="" width="300px" />
    <div class="view_menu">
      <p>view menu</p>
      <div class="arrow">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
